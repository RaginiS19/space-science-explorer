<%- include('partials/header') %>

<main>
  <% if (error) { %>
    <div class="error-box">
      <strong>âš ï¸ Error:</strong> <%= error %>
    </div>
  <% } else { %>
    <!-- NASA APOD Section -->
    <section class="apod">
      <h2>ğŸŒŒ Astronomy Picture of the Day</h2>
      <p><strong>Date:</strong> <%= selectedDate %></p>

      <% if (apod.media_type === 'image') { %>
        <img src="<%= apod.url %>" alt="<%= apod.title %>" />
      <% } else if (apod.media_type === 'video') { %>
        <iframe src="<%= apod.url %>" width="100%" height="400" allowfullscreen></iframe>
      <% } %>

      <h3><%= apod.title %></h3>
      <p><%= apod.explanation %></p>
      <p><a href="/apod">ğŸ“… View other dates</a></p>
    </section>

    <hr />

    <!-- SpaceX Launches Section -->
    <section class="launches">
      <h2>ğŸš€ Upcoming SpaceX Launches</h2>
      <% if (launches.length > 0) { %>
        <ul class="launch-list">
          <% launches.forEach(launch => { %>
            <li>
              <strong><%= launch.name %></strong>
              <span>
                ğŸ—“ï¸
                <%= new Date(launch.window_start).toLocaleString('en-US', {
                  weekday: 'long',
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                  hour: 'numeric',
                  minute: '2-digit',
                  hour12: true
                }) %>
              </span>
            </li>
          <% }); %>
        </ul>
      <% } else { %>
        <p>No upcoming launches available.</p>
      <% } %>
      <p><a href="/launches">ğŸ”­ View more launches</a></p>
    </section>
  <% } %>
</main>

